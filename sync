#!/bin/bash

# 1. Show what changed
echo "--- Status ---"
git status -s

# 2. Check if the user provided a commit message
if [ -z "$1" ]; then
    echo "Error: You must provide a commit message."
    echo "Usage: ./sync 'Fixed ALU bug'"
    exit 1
fi

# 3. Add, Commit, Push
echo "--- Syncing to GitHub ---"
git add .
git commit -m "$1"
git push

echo "--- Done! ---"
